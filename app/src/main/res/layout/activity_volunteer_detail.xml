<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="@drawable/formbackground">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/formtitle" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/Namelbl"
                android:text="Name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/NameVal"
                android:textSize="20sp"
                android:text="name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_alignTop="@+id/Namelbl"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="City"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/cityval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/Agelbl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Age"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/ageval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/genderlbl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Gender"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/genderval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/birthdatelbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Date of Birth"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/birthdateval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/registeredonlbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Registered On"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registeredonval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/contactnumberlbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Contact Number"
                android:textSize="20sp"
                android:ellipsize="start"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/contactnumberval"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/edittextstyle"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:gravity = "center"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20pt"
                android:src="@drawable/ic_launcher" />

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="#5868C2"
                fbutton:shadowColor="#25358F"
                android:minHeight="50dp"
                fbutton:cornerRadius="5dp"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/button"
                android:layout_centerVertical="true"
                android:layout_below="@+id/etPassword2"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="@drawable/mybutton"
                />

            <info.hoang8f.widget.FButton
                fbutton:buttonColor="#5868C2"
                fbutton:shadowColor="#25358F"
                android:minHeight="50dp"
                fbutton:cornerRadius="5dp"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/registeredonval"
                android:text="Message"
                android:id="@+id/button2"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:background="@drawable/mybutton"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

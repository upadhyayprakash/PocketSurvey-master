<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kunalganglani.com.suveyji.UserManagement"
    android:background="@drawable/formbackground">


    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#5868C2"
        fbutton:shadowColor="#25358F"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        android:id="@+id/bCreateuser"
        android:text="Create User"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#5868C2"
        fbutton:shadowColor="#25358F"
        android:minHeight="50dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        android:id="@+id/bDeleteuser"
        android:layout_below="@id/bCreateuser"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete User"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />

    <info.hoang8f.widget.FButton
        fbutton:buttonColor="#5868C2"
        fbutton:shadowColor="#25358F"
        android:minHeight="50dp"
        fbutton:cornerRadius="5dp"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="8dp"
        android:id="@+id/bViewuser"
        android:layout_below="@id/bDeleteuser"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View User"
        android:textColor="#ffffff"
        android:textSize="18sp"
        />
</RelativeLayout>
